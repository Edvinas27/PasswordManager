<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        
        <!-- Add Object You Wish To Style here -->
        
        <Border Padding="20" Background="{DynamicResource PrimaryBackgroundGradient}">
                        <Grid RowDefinitions="*, Auto">
                                <StackPanel Spacing="12">
                                        
                                        <Button HorizontalAlignment="Stretch">
                                                <StackPanel Orientation="Horizontal">
                                                        <Label Classes="icon" Content="&#xe46a;"></Label>
                                                        <Label Content="Favorites"></Label>
                                                </StackPanel>
                                        </Button>
                                        
                                        <Button HorizontalAlignment="Stretch">
                                                <StackPanel Orientation="Horizontal">
                                                        <Label Classes="icon" Content="&#xe2d6;"></Label>
                                                        <Label Content="Passwords"></Label>
                                                </StackPanel>
                                        </Button>
                                        <Button HorizontalAlignment="Stretch">
                                                <StackPanel Orientation="Horizontal">
                                                        <Label Classes="icon" Content="&#xe5fa;"></Label>
                                                        <Label Content="Payment Cards"></Label>
                                                </StackPanel>
                                        </Button>
                                </StackPanel>
                                <Button Grid.Row="1" Classes="transparent">
                                        <Label Classes="icon" Content="&#xe270;"></Label>
                                </Button>
                        </Grid>
                </Border>
        
    </Design.PreviewWith>

    <!-- Add Styles Here -->
    
    <Style Selector="Button">
        <Setter Property="FontSize" Value="16"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"></Setter>
        <Setter Property="Background" Value="{DynamicResource PrimaryBackground}"></Setter>
            <Setter Property="CornerRadius" Value="6,6,12,0"></Setter>
    </Style>
    
    <Style Selector="Label.icon">
        <Setter Property="FontFamily" Value="{DynamicResource Phosphor}"></Setter>
        <!-- These margins are because phosphor icons are idiots and violated standards when designing fonts -->
        <Setter Property="Margin" Value="0,1,0,0"></Setter>
    </Style>
    
    <Style Selector="Window">
        <Setter Property="FontFamily" Value="{DynamicResource 'Akko Pro Regular'}"></Setter>
    </Style>
    
    <Style Selector="Button.transparent Label">
            <Setter Property="RenderTransform" Value="scale(1)"></Setter>
    </Style>    
    
    <Style Selector="Button.transparent:pointerover Label">
            <Setter Property="RenderTransform" Value="scale(1.3)"></Setter>
    </Style>
    
    <Style Selector="Button:pointerover /template/ ContentPresenter">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryHoverForeground}"></Setter>
        <Setter Property="Background" Value="{DynamicResource PrimaryHoverBackground}"></Setter>
            <Setter Property="Cursor" Value="Hand"></Setter>
    </Style>
    
    <Style Selector="Button.transparent">
            <Setter Property="Background" Value="Transparent"></Setter>
    </Style>
    
    <Style Selector="Button.transparent:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent"></Setter>
    </Style>
    
    
    
</Styles>
