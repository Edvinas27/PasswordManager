<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="PasswordManager.App"
             xmlns:local="clr-namespace:PasswordManager"
             RequestedThemeVariant="Default">
    
    
    <!-- This is same as app.axaml.cs line 13 -->
    
    <!-- <Application.DataTemplates> -->
    <!--     <local:ViewLocator></local:ViewLocator> -->
    <!-- </Application.DataTemplates> -->
    

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="Styles/AppDefault.axaml"></StyleInclude>
    </Application.Styles>
             
    <Application.Resources>
        
        <FontFamily x:Key="Phosphor">/Assets/Fonts/Phosphor.ttf#Phosphor</FontFamily>
        <FontFamily x:Key="Phosphor-Fill">/Assets/Fonts/Phosphor-Fill.ttf#Phosphor-Fill</FontFamily>
        <FontFamily x:Key="Akko Pro Regular">/Assets/Fonts/Akko Pro Regular.ttf#Akko Pro</FontFamily>
        
        <SolidColorBrush x:Key="PrimaryBackground">#F8F8FF</SolidColorBrush>
        <SolidColorBrush x:Key="PrimaryTextColor">#000000</SolidColorBrush>
        <SolidColorBrush x:Key="PrimaryButtonBackground">#c7c7ff</SolidColorBrush>
        <SolidColorBrush x:Key="PrimaryButtonActiveBackground">#fffff8</SolidColorBrush>
        
        <LinearGradientBrush x:Key="PrimaryBackgroundGradient" StartPoint="0%, 0%" EndPoint="100%, 0%">
            <GradientStop Offset="0" Color="#a3a3f5"></GradientStop>
            <GradientStop Offset="1" Color="#cbcbf6"></GradientStop>
        </LinearGradientBrush>
        
        <SolidColorBrush x:Key="PrimaryHoverBackground">#EBEBFF</SolidColorBrush>
        <SolidColorBrush x:Key="PrimaryHoverForeground">#000000</SolidColorBrush>
    </Application.Resources>
</Application>